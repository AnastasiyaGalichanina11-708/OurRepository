@model IEnumerable<NewInstagramApp.Models.User>

@{
    ViewData["Title"] = "Welcome";
}
<p></p>
<p>
    <div class="Absolute-Center">
        <h2>Добро Пожаловать в бюджетную версию Инстаграм</h2>
    </div>
</p>
<h1></h1>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Sloy_0.svg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="btn btn-forText">
                    Оригинальная страничка. ЛоЛ
                    <a class="btn btn-primary" href="https://www.instagram.com">
                        Клик
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Sloy_1.svg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="btn btn-forText">
                    Погода в Казани сегодня
                    <a class="btn btn-primary" href="https://yandex.ru/pogoda/kazan/details#9">
                        Жмяк
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Sloy_3.svg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="btn btn-forText">
                    Задолбали???
                    <a class="btn btn-primary" href="https://zadolba.li">
                        Задолба!ли
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

