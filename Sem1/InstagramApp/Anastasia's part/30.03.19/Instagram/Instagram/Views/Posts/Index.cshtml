@model IEnumerable<Instagram.Models.FileModel>

@{
    ViewData["Title"] = "AddFile";
}

<h3>Выберите файл для загрузки</h3>
<form asp-action="AddFile" asp-controller="Posts" method="post" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" /><br>
    <input type="submit" value="Загрузить" />
</form>

<h3>Все файлы</h3>
@foreach (var f in Model)
{
    <p><img src="@Url.Content(f.Path)"></p>
}


